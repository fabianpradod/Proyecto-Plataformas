package com.proyectoplataformas.appguatemala.data.repository

import com.google.firebase.firestore.FirebaseFirestore
import com.proyectoplataformas.appguatemala.data.model.Noticia
import kotlinx.coroutines.tasks.await
import android.util.Log

class NoticiaRepository {
    private val db = FirebaseFirestore.getInstance()

    suspend fun getNoticias(): List<Noticia> {
        return try {
            val snapshot = db.collection("noticias").get().await()
            snapshot.documents.mapNotNull { it.toObject(Noticia::class.java) }
        } catch (e: Exception) {
            Log.e("Firebase", "Error al obtener noticias", e)
            emptyList()
        }
    }
}
